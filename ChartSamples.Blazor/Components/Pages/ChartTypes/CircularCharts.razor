@page "/chart-types/circular-charts"

<PageTitle>Circular Charts - Chart Samples</PageTitle>

<SampleBase Title="Circular Charts Gallery"
            Description="This sample provides an overview of circular chart types available. Click on a chart type below to see detailed samples."
            CSharpCode="@_csharpCode">
    
    <div class="chart-type-gallery">
        <div class="gallery-item">
            <h4>Polar Chart</h4>
            <p>A circular graph on which data points are displayed using angle and distance from center.</p>
            <ChartViewer Width="300" Height="220" Configure="@ConfigurePolarChart" />
            <a href="/chart-types/polar-chart" class="btn-sample">View Sample</a>
        </div>
        <div class="gallery-item">
            <h4>Radar Chart</h4>
            <p>A circular graph used primarily as a comparative tool for multiple data series.</p>
            <ChartViewer Width="300" Height="220" Configure="@ConfigureRadarChart" />
            <a href="/chart-types/radar-chart" class="btn-sample">View Sample</a>
        </div>
    </div>

</SampleBase>

<style>
    .chart-type-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        padding: 16px 0;
    }
    .gallery-item {
        flex: 1;
        min-width: 320px;
        max-width: 400px;
        padding: 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        background: #fafafa;
    }
    .gallery-item h4 {
        margin: 0 0 8px 0;
        color: #1a365d;
    }
    .gallery-item p {
        margin: 0 0 12px 0;
        color: #666;
        font-size: 0.9em;
    }
    .btn-sample {
        display: inline-block;
        margin-top: 12px;
        padding: 8px 16px;
        background: #2d5a87;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }
    .btn-sample:hover {
        background: #1a365d;
    }
</style>

@code {
    private void ConfigurePolarChart(SvgChart chart)
    {
        chart.Title = "Polar Chart";
        chart.ShowLegend = false;

        var series1 = new SvgChartSeries("Series1")
        {
            ChartType = SvgChartType.Polar,
            Color = ChartColor.FromArgb(220, 65, 140, 240),
            LineWidth = 2,
            ShowMarkers = true,
            MarkerSize = 5
        };

        // Generate polar data using sine wave
        for (double angle = 0.0; angle <= 360.0; angle += 15.0)
        {
            double yValue = (1.0 + Math.Sin(angle / 180.0 * Math.PI)) * 10.0;
            series1.Points.Add(new SvgDataPoint(angle + 90.0, yValue));
        }

        chart.Series.Add(series1);
    }

    private void ConfigureRadarChart(SvgChart chart)
    {
        chart.Title = "Radar Chart";
        chart.ShowLegend = false;

        var series1 = new SvgChartSeries("Series1")
        {
            ChartType = SvgChartType.Radar,
            Color = ChartColor.FromArgb(180, 65, 140, 240),
            LineWidth = 1,
            ShowMarkers = false
        };

        string[] categories = ["Speed", "Power", "Accuracy", "Endurance", "Agility"];
        double[] values = [85, 70, 92, 78, 88];

        for (int i = 0; i < categories.Length; i++)
        {
            series1.Points.Add(new SvgDataPoint(i, values[i], categories[i]));
        }

        chart.Series.Add(series1);
    }

    private const string _csharpCode = @"// Polar chart - X values are angles, Y values are distance from center
chart1.Series[""Data""].ChartType = SeriesChartType.Polar;
for (double angle = 0.0; angle <= 360.0; angle += 10.0)
{
    double yValue = (1.0 + Math.Sin(angle / 180.0 * Math.PI)) * 10.0;
    chart1.Series[""Data""].Points.AddXY(angle, yValue);
}

// Radar chart - X values are category indices, Y values are the data
